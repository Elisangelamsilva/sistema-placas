<h2 style='margin: 15px'> Cadastro de Placas de Carros </h2>

</br></br>

<%= link_to 'Adicionar novos registros', new_placa_path, class: 'btn btn-success float-right',style:'margin: 15px', method: :get %>

  <table class="table table-striped">
    <div class="table-responsive">
    <thead>
      <tr>
        <th scope="col">Placa</th>
        <th scope="col">Proprietario</th>
        <th scope="col">Modelo</th>
        <th scope="col">Ano</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @registros.each do |registro| %>
        <tr>
          <th scope="row"><%= registro.placa %></th>
          <td><%= registro.proprietario %></</td>
          <td><%= registro.modelo %></</td>
          <td><%= registro.ano %></td>
          <td><%= link_to 'Editar registro', edit_placa_path(registro.placa), class: 'btn btn-success', method: :get %>
          <%= link_to 'Deletar registro', placa_path(registro.placa), class: 'btn btn-dark', method: :delete %> </td>
        </tr>
      <% end %>
    </tbody>
    </div>
  </table>
